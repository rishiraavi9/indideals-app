# Server Configuration
PORT=3001
NODE_ENV=production

# Database (use connection pooling in production)
DATABASE_URL=postgres://user:password@localhost:5432/deals_db

# JWT Configuration (generate with: openssl rand -hex 64)
JWT_SECRET=your-jwt-secret-here

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com

# OAuth Configuration (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Feature Flags
FEATURE_MERCHANT_SCRAPERS=true
FEATURE_IMAGE_FALLBACK=true
FEATURE_IMAGE_PROXY=true

# Image Strategy: placeholder | merchant-fallback | proxy-cache
IMAGE_STRATEGY=placeholder

# Affiliate IDs
AMAZON_AFFILIATE_ID=your-affiliate-id
FLIPKART_AFFILIATE_ID=your-affiliate-id

# Claude AI (for duplicate detection)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WHITELIST=
