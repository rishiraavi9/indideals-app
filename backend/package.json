  "type": "module",
  "description": "Backend API for Deals App",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npx esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --packages=external --sourcemap",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "seed:merchants": "tsx src/scripts/seed-merchants.ts",
    "setup:scheduler": "tsx src/scripts/setup-scheduler.ts",
    "clear:scheduler": "tsx src/scripts/setup-scheduler.ts clear",
    "test:scraper": "tsx src/scripts/test-scraper.ts",
    "create:demo-deals": "tsx src/scripts/create-demo-ai-deals.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ai": "vitest run src/tests/ai-services.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
