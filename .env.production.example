# IndiaDeals Production Environment Configuration
# Copy this file to .env and fill in your values

# Database
POSTGRES_USER=indiadeals
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=deals_db

# Redis
REDIS_PASSWORD=your-secure-redis-password

# JWT Secret (generate with: openssl rand -hex 64)
JWT_SECRET=your-jwt-secret-here

# Frontend URL (your domain)
FRONTEND_URL=https://your-domain.com

# OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Affiliate IDs
AMAZON_AFFILIATE_ID=your-amazon-affiliate-id
FLIPKART_AFFILIATE_ID=your-flipkart-affiliate-id

# Optional: Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional: Claude AI for duplicate detection
ANTHROPIC_API_KEY=
